            android:id="@+id/tier"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Название"
            android:textColor="@color/second_color"
            android:textSize="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@id/name"
            app:layout_constraintBottom_toTopOf="@+id/chars" />

        <TextView
            android:id="@+id/chars"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Столица"
            android:textColor="@color/second_color"
            android:textSize="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/img"
            app:layout_constraintTop_toBottomOf="@+id/tier"
            app:layout_constraintBottom_toBottomOf="parent" />-->

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/info"
        android:text="Цена"
        android:textSize="25dp"
        android:background="@color/second_color"
        android:textColor="@color/color_background"
        android:layout_marginTop="16px"
        android:paddingLeft="16dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cost"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/cities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cost"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/bridgewatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Bridgewatch:"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/caerleon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Caerleon:"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/lymhurst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Lymhurst:"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/fort_sterling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/caerleon"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Fort Sterling:"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/martlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/fort_sterling"
                app:layout_constraintLeft_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Martlock:"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/thetford"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:text="Thetford:"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@id/cost"
            app:layout_constraintLeft_toRightOf="@id/cities"
            android:layout_weight="2"
            >
            <TextView
                android:id="@+id/bridgewatch_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/caerleon_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/lymhurst_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/fortSterling_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/martlock_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
            <TextView
                android:id="@+id/thetford_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/second_color"
                android:textSize="16dp"
                />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>